<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/listview_selector"
    android:descendantFocusability="blocksDescendants"
    android:padding="7dip" >

    <TextView
        android:id="@+id/file_list_list2_textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:singleLine="true"
        android:text="@string/takeplace"
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/file_list_list2_textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/file_list_list2_textView1"
        android:layout_below="@id/file_list_list2_textView1"
        android:singleLine="true"
        android:text="@string/takeplace"
        android:textColor="#222222"
        android:textSize="14sp" />

</RelativeLayout>