<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- pressed -->
    <item android:state_pressed="true"><shape android:shape="rectangle">
            <gradient android:angle="270" android:endColor="#9999ff" android:startColor="#9999ff" />

            <corners android:radius="1dp" />
        </shape></item>
    <!-- focus -->
    <item android:state_focused="true"><shape>
            <gradient android:angle="270" android:endColor="#5555ff" android:startColor="#5555ff" />

            <corners android:radius="1dp" />
        </shape></item>
    <item android:state_enabled="false"><shape android:shape="rectangle">
            <gradient android:angle="270" android:endColor="#222222" android:startColor="#222222" />

            <corners android:radius="1dp" />
        </shape></item>
    <!-- default -->
    <item><shape>
            <gradient android:angle="0" android:endColor="#6666ff" android:startColor="#6666ff" />

            <corners android:radius="1dp" />
        </shape></item>

</selector>